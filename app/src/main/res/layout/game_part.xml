<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIC TAC TOE"
        android:textColor="@color/om_color"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="turn"
        android:textColor="@color/om_shanti_color"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="player x "
                android:textColor="@color/player_x"
                android:textSize="20sp"
                android:id="@+id/player_x_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x score "
                android:textColor="@color/player_x"
                android:textSize="25sp"

                android:id="@+id/player_x_score"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="player o "
                android:textSize="20sp"
                android:textColor="@color/player_o"
                android:id="@+id/player_o_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="o score "
                android:textColor="@color/player_o"
                android:textSize="25sp"
                android:id="@+id/player_o_score"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="@drawable/solid"
        android:layout_gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"

        >

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn1"

            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"

            android:tag="0"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn2"
            android:layout_marginLeft="4dp"

            android:layout_marginRight="4dp"
            android:tag="1"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:id="@+id/btn3"
            android:layout_marginLeft="4dp"

            android:tag="2"/>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"

        >

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn4"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"

            android:tag="4"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn5"
            android:layout_marginLeft="4dp"

            android:layout_marginRight="4dp"
            android:tag="5"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:id="@+id/btn6"
            android:layout_marginLeft="4dp"

            android:tag="6"/>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn7"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"

            android:tag="7"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn8"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"

            android:tag="8"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/btn9"
            android:tag="9"/>





    </LinearLayout>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Powered by Anurag shukla"
        android:layout_marginTop="250dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/om_color"
        android:textSize="18sp"/>




</LinearLayout>